{
  "manifest_version": 3,
  "name": "Chrome Extension",
  "description": "How Did We Get Here?",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "chrome_extension.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "<all urls>"

  ],
  "content_scripts": [
    {
      "matches": [
        "<all urls>"
      ],
      "css": [],
      "js": ["content-script-isolated.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": [
        "<all urls>"
      ],
      "css": [],
      "js": ["content-script-main.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}
